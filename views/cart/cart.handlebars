<section class="cart">
    {{#unless data}}
    <div class="message">There is nothing in your cart</div>
    {{/unless}}
    {{#if data}}
    <table>
        <tr>
            <th></th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>
        {{#each data}}
        <tr>
            <td><img src="/uploads/{{this.productImage}}" width="20px" alt="Product image"></td>
            <td>{{this.productName}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quantity}}</td>
            <td><a href="/cart/delete/{{this.productID}}?method=DELETE">Delete</a></td>
        </tr>
        {{/each}}
    </table>
    <form method="POST" action="/cart/checkout" enctype="multipart/form-data">
        <input type="submit" value="PLACE YOUR ORDER">
    </form>
    {{/if}}
</section>